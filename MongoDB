MongoDB commands:

use earthlingdb

db.createCollection('questions')

db.questions.insert({question_text:'Which relaxation method to you prefer?'})

db.createCollection('answers')

db.answers.insert({answer_text:'Listen to soothing music', aid:'1', count:0})

db.answers.insert({answer_text:'Take a warm bath', aid:'2', count:0})

db.answers.insert({answer_text:'Tai Chi', aid:'3', count:0})

db.answers.insert({answer_text:'Chai Tea', aid:'4', count:0})